# Authentication Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your-super-secret-key-here

# Email Provider (Resend)
RESEND_API_KEY=re_your_api_key_here

# CAPTCHA Provider (choose one)

# Option 1: reCAPTCHA v2 (checkbox-based)
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Option 2: reCAPTCHA v3 (invisible, score-based)
# RECAPTCHA_V3_SITE_KEY=your_recaptcha_v3_site_key
# RECAPTCHA_V3_SECRET_KEY=your_recaptcha_v3_secret_key

# Option 3: hCaptcha
# HCAPTCHA_SITE_KEY=your_hcaptcha_site_key
# HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key

# Option 4: Cloudflare Turnstile
# TURNSTILE_SITE_KEY=your_turnstile_site_key
# TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Test Keys (reCAPTCHA v2 - always pass without user interaction)
# RECAPTCHA_SITE_KEY=6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI
# RECAPTCHA_SECRET_KEY=6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe

# Public environment variables (exposed to client)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
